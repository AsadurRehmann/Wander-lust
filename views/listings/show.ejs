<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-3 mb-3">
            <div class="col-8 offset-3">
                <h3>Listing Details</h3>
            </div>
            <div class="card col-6 offset-3">

                <img class="card-img-top show-img" src="<%=listingDetails.image.url%>" alt="listing_image">
                <div class="card-body">
                    <p class="card-text">
                        <b>
                            <%= listingDetails.title %>
                        </b><br>
                        <%= listingDetails.description %> <br>
                            $<%= listingDetails.price.toLocaleString("en-PK") %> <br>
                                <%= listingDetails.location %> <br>
                                    <%= listingDetails.country %>
                    </p>
                </div>

            </div>

            <div class="btns">
                <a href="/listing/<%=listingDetails._id%>/edit" class="btn btn-dark col-1 offset-3">Edit</a>
                <br>
                <form action="/listing/<%=listingDetails._id%>?_method=DELETE" method="post">
                    <button class="btn btn-danger offset-3">Delete</button>
                </form>
            </div>
            </div>
        </div>
    </body>