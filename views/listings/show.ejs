<% layout("/layouts/boilerplate") %>

<script>
    const mapToken = "<%=process.env.MAP_TOKEN%>";
    const listinglocation = <%- JSON.stringify(listingDetails) %>;
</script>

<div class="row mt-3 mb-3">
    <div class="col-12 col-md-8 offset-md-2">
        <h3><b><%= listingDetails.title %></b></h3>
    </div>

    <div class="card col-12 col-md-8 offset-md-2 listing-card">
        <img class="card-img-top show-img" src="<%=listingDetails.image.url%>" alt="listing_image">
        <div class="card-body">
            <p class="card-text">
                Owned By: <b><i><%= listingDetails.owner.username%></i></b>
            </p>
            <p class="card-text">Description<b> <%= listingDetails.description %></b>:</p>
            <p class="card-text">Price:<b> $<%= listingDetails.price.toLocaleString("en-PK") %></b></p>
            <p class="card-text">Location<b>: <%= listingDetails.location %></b></p>
            <p class="card-text">Country<b>: <%= listingDetails.country %></b></p>
            <p class="card-text">Category<b>: <%= listingDetails.category %></b></p>
        </div>
    </div>

    <% if (currUser && currUser._id.equals(listingDetails.owner._id)) { %>
        <div class="btns mt-2 mb-3 col-12 col-md-8 offset-md-2 d-flex flex-wrap gap-2">
            <!-- Make edit button full text and responsive -->
            <a href="/listing/<%=listingDetails._id%>/edit" class="btn btn-dark flex-fill text-center">Edit</a>
            <form action="/listing/<%=listingDetails._id%>?_method=DELETE" method="post" class="flex-fill">
                <button class="btn btn-danger w-100">Delete</button>
            </form>
        </div>
    <% } %>

    <% if (currUser) { %>
        <div class="col-12 col-md-8 offset-md-2 mb-3 mt-3">
            <hr>
            <h4>Leave a review</h4>
            <form action="/listing/<%=listingDetails._id%>/reviews" method="post" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <fieldset class="starability-slot">
                        <input type="radio" id="no-rate" class="input-no-rate" name="reviews[rating]" value="1" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="reviews[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="reviews[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="reviews[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="reviews[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="reviews[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>
                <div class="mb-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea name="reviews[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                    <div class="invalid-feedback">Comment should be valid.</div>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
            </form>
        </div>
    <% } %>

    <% if (listingDetails.reviews.length > 0) { %>
        <div class="col-12 col-md-8 offset-md-2 mb-3 mt-3">
            <hr>
            <p><b>All Reviews</b></p>
            <% for (let review of listingDetails.reviews) { %>
                <!-- Make review cards full width on mobile -->
                <div class="card mb-3 w-100">
                    <div class="card-body">
                        <h5 class="card-title mt-1">@<%=review.author.username%></h5>
                        <!-- Ensure stars don't overflow -->
                        <div class="starability-result card-text" data-rating="<%=review.rating%>" style="overflow-x: auto; white-space: nowrap;"></div>
                        <p class="card-text"><%=review.comment%></p>
                        <form action="/listing/<%=listingDetails._id%>/reviews/<%=review._id%>?_method=DELETE" method="post">
                            <button class="btn btn-sm btn-dark mb-3">Delete</button>
                        </form>
                    </div>
                </div>
            <% } %>
        </div>
    <% } %>

    <div class="col-12 col-md-8 offset-md-2 mb-3 mt-3">
        <h3>Where you'll be</h3>
        <!-- Smaller map on mobile -->
        <div id="map" style="height: 250px; width: 100%; border-radius: 10px;"></div>
    </div>
</div>

<script src="/js/map.js"></script>
